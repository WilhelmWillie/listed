<div class='container'>
  <div class='row'>
    <div class='col-md-6 col-md-offset-3'>
      <%= form_for [@list, @item] do |f| %>
        <div class='form-group'>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class='form-group'>
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>

        <%= f.submit 'Add item', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
